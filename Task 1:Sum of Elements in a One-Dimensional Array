#include <iostream>
using namespace std; 
// Объяснение: Программа создает массив заданного размера, последовательно считывает 
// элементы от пользователя, вычисляет их сумму путем сложения каждого элемента 
// в цикле и выводит результат.

int main() {
    int n;
    cout << "Введите количество элементов: ";
    cin >> n;
    
    // Создание массива и переменной для суммы
    int arr[n], sum = 0;
    
    cout << "Введите " << n << " чисел: ";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];       // Ввод элементов массива
        sum += arr[i];       // Накопление суммы элементов
    }
    
    cout << "Сумма = " << sum << endl;
    return 0;
}
