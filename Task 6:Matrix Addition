#include <iostream>
using namespace std;
// Объяснение: Программа складывает две квадратные матрицы 3x3, 
// выполняя поэлементное сложение соответствующих элементов матриц A и B. 
// Результат сохраняется в матрице C и выводится на экран.
int main() {
    const int size = 3;   // Размер квадратных матриц
    int A[size][size], B[size][size], C[size][size];
    cout << "Введите матрицу A (3x3):\n";
    for(int i = 0; i < size; i++) {
        for(int j = 0; j < size; j++) {
            cin >> A[i][j];    // Ввод элементов матрицы A
        }
    }
    cout << "Введите матрицу B (3x3):\n";
    for(int i = 0; i < size; i++) {
        for(int j = 0; j < size; j++) {
            cin >> B[i][j];    // Ввод элементов матрицы B
            // Поэлементное сложение матриц
            C[i][j] = A[i][j] + B[i][j];  
        }
    }
    cout << "Результат:\n";
    for(int i = 0; i < size; i++) {
        for(int j = 0; j < size; j++) {
            cout << C[i][j] << " ";  // Вывод результирующей матрицы
        }
        cout << endl;  // Переход на новую строку после каждой строки матрицы
    }
    return 0;
}
