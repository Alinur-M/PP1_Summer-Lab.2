#include <iostream>
using namespace std;
// Объяснение: Программа подсчитывает количество четных и нечетных чисел в массиве, 
// проверяя для каждого элемента остаток от деления на 2. Если остаток 0 - число четное, 
// иначе - нечетное.
int main() {
    int n, even = 0, odd = 0;
    cout << "Введите количество элементов: ";
    cin >> n;
    int arr[n];
    cout << "Введите " << n << " чисел: ";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];
        // Проверка четности через остаток от деления
        if(arr[i] % 2 == 0) even++;  // Увеличение счетчика четных
        else odd++;                   // Увеличение счетчика нечетных
    }
    cout << "Четных: " << even << "\nНечетных: " << odd << endl;
    return 0;
}

