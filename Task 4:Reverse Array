#include <iostream>
using namespace std;
// Объяснение: Программа выводит элементы массива в обратном порядке, 
// начиная с последнего элемента (индекс n-1) до первого (индекс 0).
int main() {
    int n;
    cout << "Введите количество элементов: ";
    cin >> n;
    int arr[n];
    cout << "Введите " << n << " чисел: ";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];    // Ввод элементов массива
    }
    cout << "Реверс: ";
    // Цикл с конца массива до начала
    for(int i = n-1; i >= 0; i--) {  
        cout << arr[i] << " ";  // Вывод элементов в обратном порядке
    }
    return 0;
}
