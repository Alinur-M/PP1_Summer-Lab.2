#include <iostream>
using namespace std;
// Объяснение: Программа сортирует массив методом пузырька, который 
// последовательно сравнивает соседние элементы и меняет их местами, 
// если они находятся в неправильном порядке. Процесс повторяется до тех пор, 
// пока массив не будет полностью отсортирован.
int main() {
    int n;
    cout << "Введите количество элементов: ";
    cin >> n;
    int arr[n];
    cout << "Введите " << n << " чисел: ";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];  // Ввод элементов массива
    }
    // Сортировка пузырьком
    for(int i = 0; i < n-1; i++) {
        // Проход по неотсортированной части массива
        for(int j = 0; j < n-i-1; j++) {
            if(arr[j] > arr[j+1]) {  // Сравнение соседних элементов
                // Обмен элементов местами
                int temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
    cout << "Отсортированный массив: ";
    for(int i = 0; i < n; i++) {
        cout << arr[i] << " ";  // Вывод отсортированного массива
    }
    return 0;
}
