#include <iostream>
using namespace std;
// Объяснение: Программа выполняет линейный поиск элемента в массиве, 
// последовательно проверяя каждый элемент на равенство целевому значению. 
// При нахождении элемента выводится его индекс, иначе - сообщение "Не найдено".
int main() {
    int n, target;
    cout << "Введите количество элементов: ";
    cin >> n;
    int arr[n];
    cout << "Введите " << n << " чисел: ";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];    // Ввод элементов массива
    }
    cout << "Введите искомое число: ";
    cin >> target;        // Ввод целевого значения для поиска
    bool found = false;   // Флаг обнаружения элемента
    for(int i = 0; i < n; i++) {
        if(arr[i] == target) {  // Проверка на совпадение
            cout << "Найдено на позиции " << i << endl;
            found = true;       // Установка флага
            break;              // Выход из цикла после нахождения
        }
    }
    if(!found) cout << "Не найдено" << endl;
    return 0;
}

